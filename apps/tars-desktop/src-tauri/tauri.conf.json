{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TARS",
  "version": "0.2.12",
  "identifier": "com.jason.tars-desktop",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/inceptyon-labs/TARS/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgzNDRBRDA3MzNCOURGRDAKUldUUTM3a3pCNjFFZzRmeFR5VGdCOWdRb0lKVWUzK0hIMVIwY2hUM1FLdGZyS1V3akQzK0c4TGkK"
    }
  },
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "TARS - Tooling, Agents, Roles, Skills",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "transparent": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: asset: https://asset.localhost; font-src 'self' data:; connect-src 'self' ipc: http://ipc.localhost https://tauri.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
